<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
		id="GravarUnidadeDialog"
		title="Gravar Unidade"
		class="sapUiSmallMargin">
   	
   		<VBox id="vBoxUnidade" class="sapUiSmallMargin">	
			<Label text="Sigla:" labelFor="sigla"/>
			<Input value="{Sigla}" id="sigla" required="true"/>
			
			<Label text="Descrição:" labelFor="descricao"/>
			<Input value="{Descricao}" id="descricao" required="true"/>
		</VBox>
   		
   		<buttons>
   			<Button text="Salvar" press="onSaveDialog"/>
   			<Button text="Fechar" press="onCloseDialog"/>
   		</buttons>
   </Dialog>
</core:FragmentDefinition>