<mvc:View controllerName="br.com.idxtecUnidadeMedida.controller.UnidadeMedida"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Unidade de Medida">
							<t:Table id="tableUnidade"
								rows="{path: '/UnidadeMedidas'}"
								class="sapUiSizeCondensed"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Auto"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Unidades"/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterPorperty="Sigla" sortProperty="Sigla">
										<Label text="Sigla"/>
										<t:template>
											<Text text="{Sigla}"/>
										</t:template>
									</t:Column>
									<t:Column filterPorperty="Descricao" sortProperty="Descricao">
										<Label text="Descrição"/>
										<t:template>
											<Text text="{Descricao}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>